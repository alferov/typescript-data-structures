{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "dist",
    "module": "umd",
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "types": [
      "jest"
    ]
  },
  "exclude": [
    "node_modules",
    "jest",
    "dist"
  ]
}